<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/background">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_add_meal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/addMeal"
        android:textSize="@dimen/NameSize"
        android:paddingLeft="@dimen/item_lPadding"
        android:paddingRight="@dimen/item_rPadding"
        android:textColor="@color/white"/>
    <EditText
        android:id="@+id/etAddMealDay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/addMealNameHint"/>
    <EditText
        android:id="@+id/etAddMealName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/addMealNameHint"/>
    <EditText
        android:id="@+id/etMealDifficulty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/addMealNameHint"/>
    <EditText
        android:id="@+id/etAddMealTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/addMealNameHint"/>
    <EditText
        android:id="@+id/etMealIngredients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/addMealNameHint"/>
    <EditText
        android:id="@+id/etMealDirections"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/addMealNameHint"/>
    <Button
        android:id="@+id/bAddMeal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/addBtn"/>

</LinearLayout>
</ScrollView>
